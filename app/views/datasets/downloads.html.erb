<% current_user = User.find(session[:user_id]) %>

<head>
  <style type="text/css">
    .card-content {
      height: 120px;
    }
  </style>
</head>

<div class="row">
  <div class="col s12">
    <div class="info-box inline-block">
      <h5 class="h5-no-margin">Archivo Lantia</h5>
    </div>
  </div>
</div>

<div class="row">

  <!-- Violencia del Crimen Organizado -->
  <div class="col l3 m4 s6">
    <div class="card">
      <div class="card-content red darken-1 white-text">
        <span class="card-title">Violencia del Crimen Organizado</span>
      </div>
      <div class="card-action grey lighten-2">
        <ul class="collection grey lighten-2" style="max-height: 400px; overflow-y: auto;">
          <% @v_months.each_with_index do |month, index| %>
            <% if !current_user.promo || index == 0 %>
              <li class="collection-item valign-wrapper grey lighten-2">
                <a href="<%= rails_blob_path(month.violence_report, disposition: "attachment") %>">
                  <img class="center small-icon-size" src="/assets/pdf_icon.png">
                </a>
                <span style="margin-left: 16px;"><%= I18n.l(month.first_day, format: '%B de %Y') %></span>
              </li>
            <% else %>
              <li class="collection-item valign-wrapper grey lighten-2">
                <a class="tooltipped grey-text text-lighten-1" data-tooltip="Las descargas para membresías promocionales están limitadas. Para descargar más datos escríbenos a contacto@lantiaintelligence.com">
                  <img class="center small-icon-size" src="/assets/pdf_icon.png" style="opacity: 0.3;">
                </a>
                <span class="grey-text text-lighten-1" style="margin-left: 16px;"><%= I18n.l(month.first_day, format: '%B de %Y') %></span>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Riesgo Social -->
  <div class="col l3 m4 s6">
    <div class="card grey lighten-2">
      <div class="card-content cyan darken-1 white-text">
        <span class="card-title">Riesgo Social</span>
      </div>
      <div class="card-action grey lighten-2">
        <ul class="collection grey lighten-2" style="max-height: 400px; overflow-y: auto;">
          <% @s_months.each_with_index do |month, index| %>
            <% if !current_user.promo || index == 0 %>
              <li class="collection-item valign-wrapper grey lighten-2">
                <a href="<%= rails_blob_path(month.social_report, disposition: "attachment") %>">
                  <img class="center small-icon-size" src="/assets/pdf_icon.png">
                </a>
                <span style="margin-left: 16px;"><%= I18n.l(month.first_day, format: '%B de %Y') %></span>
              </li>
            <% else %>
              <li class="collection-item valign-wrapper grey lighten-2">
                <a class="tooltipped grey-text text-lighten-1" data-tooltip="Las descargas para membresías promocionales están limitadas. Para descargar más datos escríbenos a contacto@lantiaintelligence.com">
                  <img class="center small-icon-size" src="/assets/pdf_icon.png" style="opacity: 0.3;">
                </a>
                <span class="grey-text text-lighten-1" style="margin-left: 16px;"><%= I18n.l(month.first_day, format: '%B de %Y') %></span>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Prospectiva -->
  <div class="col l3 m4 s6">
    <div class="card grey lighten-2">
      <div class="card-content green darken-1 white-text">
        <span class="card-title">Prospectiva</span>
      </div>
      <div class="card-action grey lighten-2">
        <ul class="collection grey lighten-2" style="max-height: 400px; overflow-y: auto;">
          <% @f_months.each_with_index do |month, index| %>
            <% if !current_user.promo || index == 0 %>
              <li class="collection-item valign-wrapper grey lighten-2">
                <a href="<%= rails_blob_path(month.forecast_report, disposition: "attachment") %>">
                  <img class="center small-icon-size" src="/assets/pdf_icon.png">
                </a>
                <span style="margin-left: 16px;"><%= I18n.l(month.first_day, format: '%B de %Y') %></span>
              </li>
            <% else %>
              <li class="collection-item valign-wrapper grey lighten-2">
                <a class="tooltipped grey-text text-lighten-1" data-tooltip="Las descargas para membresías promocionales están limitadas. Para descargar más datos escríbenos a contacto@lantiaintelligence.com">
                  <img class="center small-icon-size" src="/assets/pdf_icon.png" style="opacity: 0.3;">
                </a>
                <span class="grey-text text-lighten-1" style="margin-left: 16px;"><%= I18n.l(month.first_day, format: '%B de %Y') %></span>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Briefing Semanal -->
  <div class="col l3 m4 s6">
    <div class="card grey lighten-2">
      <div class="card-content orange darken-1 white-text">
        <span class="card-title">Briefing Semanal</span>
      </div>
      <div class="card-action grey lighten-2">
        <ul class="collection grey lighten-2" style="max-height: 400px; overflow-y: auto;">
          <% @briefings.each_with_index do |briefing, index| %>
            <% if !current_user.promo || index == 0 %>
              <li class="collection-item valign-wrapper grey lighten-2">
                <a href="/<%= briefing[:path] %>">
                  <img class="center small-icon-size" src="/assets/pdf_icon.png">
                </a>
                <span style="margin-left: 16px;"><%= briefing[:number] %> | <%= briefing[:month] %></span>
              </li>
            <% else %>
              <li class="collection-item valign-wrapper grey lighten-2">
                <a class="tooltipped grey-text text-lighten-1" data-tooltip="Las descargas para membresías promocionales están limitadas. Para descargar más datos escríbenos a contacto@lantiaintelligence.com">
                  <img class="center small-icon-size" src="/assets/pdf_icon.png" style="opacity: 0.3;">
                </a>
                <span class="grey-text text-lighten-1" style="margin-left: 16px;"><%= briefing[:number] %> | <%= briefing[:month] %></span>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

</div>

