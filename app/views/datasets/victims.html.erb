<div class="row top-row valign-wrapper">
	<div class="col s1">
		<i class="material-icons medium right">grid_on</i>
	</div>
	<div class="col s11">
		<h5 class="h5-no-margin">
			<span class="slim"> Tabla de frecuencias</span>
		</h5>
		<h5 class="h5-no-margin">Víctimas letales del crimen organizado</h5>
	</div>
</div>
<div class="row">
	<div class="col l4 m6 s12 short-row">
		<div class="card cyan darken-1">
			<form id="victim_freq_table" action="/datasets/victims_query" method="post">
				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
				<div class="card-content white-text">
					<div class="row">
						<div cass="col s12">
							<ul class="tabs cyan-tabs">
								<li class="tab col s6"><a class="white-text" href="#victim_freq_params">DESAGREGACIÓN</a></li>
								<li class="tab col s6"><a class="white-text" href="#victim_freq_filters">FILTROS</a></li>
							</ul>
						</div>
					</div>
					<div id="victim_freq_params">
						<div class="row">
							<div class="query-header-box valign-wrapper cyan-text text-accent-2">
								<i class="material-icons small">access_time</i><p5 class="query-header">Temporal</p5>
							</div>
							<div id="victim_freq_timeframe_selector">
						    	<% @timeFrames.each do |query| %>
									<p class="input-padding">
										<label>
											<input  id="<%= query[:box_id] %>" name="query[freq_timeframe]" value="<%= query[:name] %>" type="radio"
												<% if query[:checked]%>
													checked
												<% end %>
											/>
											<span class="white-text p20 slim"><%= query[:caption] %></span>
										</label>
									</p>
						    	<% end %>
						    </div>
						</div>
						<div class="row">
						    <div class="query-header-box valign-wrapper cyan-text text-accent-2">
								<i class="material-icons small">map</i><p5 class="query-header">Geográfica</p5>
							</div>
							<div id="victim_freq_placeframe_selector">
						    	<% @placeFrames.each do |query| %>
									<p class="input-padding">
										<label>
											<input  id="<%= query[:box_id] %>" name="query[freq_placeframe]" value="<%= query[:name] %>" type="radio"
												<% if query[:checked]%>
													checked
												<% end %>
											/>
											<span class="white-text p20 slim"><%= query[:caption] %></span>
										</label>
									</p>
						    	<% end %>
						    </div>
					    </div>
						<div class="row">
						    <div class="query-header-box valign-wrapper cyan-text text-accent-2">
								<i class="material-icons small">wc</i><p5 class="query-header">Género</p5>
							</div>
							<div id="victim_freq_genderframe_selector">
						    	<% @genderFrames.each do |query| %>
									<p class="input-padding">
										<label>
											<input  id="<%= query[:box_id] %>" name="query[freq_genderframe]" value="<%= query[:name] %>" type="radio"
												<% if query[:checked]%>
													checked
												<% end %>
											/>
											<span class="white-text p20 slim"><%= query[:caption] %></span>
										</label>
									</p>
						    	<% end %>
						    </div>
					    </div>
					</div>
					<div id="victim_freq_filters" class="filter-box">
						<div class="row">
							<ul class="collapsible cyan">
								<li>
									<div class="collapsible-header cyan">AÑOS</div>
									<div id="year_filter_box" class="collapsible-body">
										<div class="row">
											<div class="col s3">
												<a class="select-all filter-btn waves-effect waves-light btn p10 cyan darken-4">Todos</a>
												<a class="clear-all filter-btn waves-effect waves-light btn p10 cyan darken-4">Limpiar</a>
											</div>
											<div class="col s9">
												<% @years.each do |year|%>
													<div class="col s6">	
														<p>
															<label>
																<input type="checkbox" name="query[freq_years][]" value="<%= year["id"] %>" 
																	<% if @checkedYears.include? year["id"] %>	
																		checked
																	<% end %>
																/>
																<span class="white-text"><%= year["name"] %></span>
															</label>
														</p>
													</div>
												<% end %>
											</div>
										</div>
									</div>
								</li>
								<li>
									<div class="collapsible-header cyan">ESTADOS</div>
									<div id="state_filter_box" class="collapsible-body">
										<div class="row">
											<div class="col s3">
												<a class="select-all filter-btn waves-effect waves-light btn p10 cyan darken-4">Todos</a>
												<a class="clear-all filter-btn waves-effect waves-light btn p10 cyan darken-4">Limpiar</a>
											</div>
											<div class="col s9">
												<% @states.each do |state|%>
													<div class="col s6">	
														<p>
															<label>
																<input type="checkbox" name="query[freq_states][]" value="<%= state["id"] %>" 
																	<% if @checkedStates.include? state["id"] %>	
																		checked
																	<% end %>
																/>
																<span class="white-text"><%= state["shortname"] %></span>
															</label>
														</p>
													</div>
												<% end %>
											</div>
										</div>
									</div>
								</li>
								<li>
									<div class="collapsible-header cyan">ZONAS METROPOLITANAS</div>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<div class="card-action">
					<div class="row">
						<div class="input-field valign-wrapper right short-row">
							<button class="send_button btn-floating disabled card-margin" type="submit"><i class="material-icons grey-text">send</i></button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
	<div class="col l8 m6 s12 short-row">
		<div class="card">
			<div class="card-content">
				<table class="freq-table">
					<thead>
						<tr>
							<% if @victim_freq_table[0][:pre_scope] %>
								<th><%= @victim_freq_table[0][:pre_scope]%></th>
							<% end %>
							<th><%= @victim_freq_table[0][:scope]%></th>
							<% if @victim_freq_table[0][:gender] %>
								<th><%= @victim_freq_table[0][:gender]%></th>
							<% end %>
							<% @victim_freq_table[0][:period].each do |period| %>
								<th><%= period.name %></th>
							<% end %>
						</tr>
					</thead>
					<tbody>
						<% @victim_freq_table[1..-1].each do |place| %>
							<tr>
								<% if place[:parent_name] %>
									<td><%= place[:parent_name] %></td>
								<% end %>
								<td><%= place[:name] %></td>
								<% if place[:gender] %>
									<td><%= place[:gender] %></td>
								<% end %>
								<% place[:freq].each do |x| %>
									<td class="right-align"><%= number_with_delimiter(x) %></td>
								<% end %>
							</tr>
						<% end %>
					</tbody>	
				</table>
			</div>
		</div>
	</div>
</div>